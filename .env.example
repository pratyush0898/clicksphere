# ClickSphere Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/clicksphere
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/clicksphere

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: JWT Secret for future authentication features
JWT_SECRET=your-super-secret-jwt-key-here

# Optional: Redis URL for Socket.IO clustering (production)
# REDIS_URL=redis://localhost:6379